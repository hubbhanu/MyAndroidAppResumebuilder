<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Title Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- Programming Languages Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#cccccc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/programmingLanguagesInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Programming Languages"
                android:textColor="#333333"
                android:inputType="text"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Web Technologies Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#cccccc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/webTechInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Web Technologies"
                android:textColor="#333333"
                android:inputType="text"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Databases Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#cccccc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/databasesInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Databases"
                android:textColor="#333333"
                android:inputType="text"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Other Tools Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#cccccc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otherToolsInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other Tools"
                android:textColor="#333333"
                android:inputType="text"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
