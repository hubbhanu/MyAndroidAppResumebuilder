<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Experience"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"/>

        <!-- Company Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#cccccc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/companyNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:textColor="#333333"
                android:inputType="text"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Company Website Link -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/companyLinkInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#cccccc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/companyLinkInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Website Link"
                android:textColor="#333333"
                android:inputType="textUri"
                android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Location -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/locationInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#cccccc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/locationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:textColor="#333333"
                android:inputType="text"
                android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Position -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#cccccc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/positionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Position"
                android:textColor="#333333"
                android:inputType="text"
                android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Work Experience Responsibilities -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/workExperienceDetailsInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#cccccc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/workExperienceDetailsInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Responsibilities/Skills"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textColor="#333333"
                android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Horizontal Layout for Start and End Year -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- Start Year -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/workExperienceStartYearInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="#cccccc">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/workExperienceStartYearInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start Year"
                    android:inputType="number"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- End Year -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/workExperienceEndYearInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="#cccccc">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/workExperienceEndYearInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="End Year"
                    android:inputType="number"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
