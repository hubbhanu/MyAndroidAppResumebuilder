<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:background="@drawable/gradient_background"> <!-- Set the background gradient as per your design -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"> <!-- White background for the form content -->

        <!-- Title Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" /> <!-- Added bottom margin for spacing -->

        <!-- Project Domain Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#cccccc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/projectDomainInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Project Domain"
                android:textColor="#333333"
                android:inputType="text"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tools Used Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#cccccc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/projectToolsInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tools Used"
                android:textColor="#333333"
                android:inputType="text"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Key Features Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#cccccc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/projectFeaturesInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Key Features"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textColor="#333333"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
